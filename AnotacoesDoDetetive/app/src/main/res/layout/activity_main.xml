<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">

        <ImageView
            android:id="@+id/imagePolicia"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_baseline_local_police_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/textDadosDaInvestigacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="32dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:text="DADOS DA INVESTIGAÇÃO"
            android:textColor="#241571"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textInformacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="NOME: "
            android:textColor="#241571"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="18"
            android:fontFamily="serif-monospace"
            android:hint="Digite o nome do suspeito"
            android:inputType="textPersonName"
            android:textColor="#241571" />

        <TextView
            android:id="@+id/inputLabelDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="serif-monospace"
            android:text="INFORMAÇÕES:"
            android:textColor="#241571"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="18"
            android:fontFamily="serif-monospace"
            android:hint="Digite suas descobertas sobre o suspeito"
            android:inputType="textMultiLine"
            android:textColor="#241571" />

        <Button
            android:id="@+id/buttonGravar"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            android:backgroundTint="#241571"
            android:drawableLeft="@drawable/ic_baseline_cloud_upload_24"
            android:drawablePadding="16dp"
            android:fontFamily="serif-monospace"
            android:onClick="doGravar"
            android:paddingHorizontal="32dp"
            android:text="Gravar"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>