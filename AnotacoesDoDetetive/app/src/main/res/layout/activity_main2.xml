<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSuspeito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#241571"
            android:fontFamily="serif-monospace"
            android:text="SUSPEITO #01"
            android:textColor="#241571"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_baseline_account_box_24"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageFingerprint"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingVertical="10dp"
                app:srcCompat="@drawable/ic_baseline_fingerprint_24"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/textNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="serif-monospace"
            android:text="NOME: "
            android:textColor="#241571"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textNomeDoSuspeito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:fontFamily="serif-monospace"
            android:text="Nome do suspeito"
            android:textColor="#241571"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/inputLabelNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp"
            android:fontFamily="serif-monospace"
            android:text="INFORMAÇÕES:"
            android:textColor="#241571"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescricaoInformacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="serif-monospace"
            android:text="Descrição das descobertas a respeito da vida do suspeito."
            android:textColor="#241571"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonGravar"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            android:backgroundTint="#241571"
            android:drawableLeft="@drawable/ic_baseline_cloud_download_24"
            android:drawablePadding="16dp"
            android:fontFamily="serif-monospace"
            android:onClick="doRecuperar"
            android:paddingHorizontal="32dp"
            android:text="Recuperar"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>